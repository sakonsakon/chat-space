.chat__side
  .side__header
    .side__box
      .user__name
        = current_user.name
      .side__btn
        = link_to new_group_path(current_user), class: "edit" do
          = icon('far', 'edit', class: "side__btn--icon")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "side__btn--icon")
  .groups__list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message